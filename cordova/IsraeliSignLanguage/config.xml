<?xml version='1.0' encoding='utf-8'?>
<widget id="org.issieshapiro.signlang" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IsraeliSignLanguage</name>
    <description>
        An app that help learning the sign language of Israel
    </description>
    <author email="info@sap.com" href="http://sap.com">
        SAP CSR team
    </author>
    <icon src="./www/resources/icon.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="ios" spec="~4.5.4" />
</widget>
