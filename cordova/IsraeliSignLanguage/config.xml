<?xml version='1.0' encoding='utf-8'?>
<widget id="org.issieshapiro.signlang" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IssieSign</name>
    <description>
        An app that help learning the sign language of Israel
    </description>
    <author email="info@sap.com" href="http://sap.com">
        SAP CSR team
    </author>
    <icon src="resources/icon.png" />
    <preference name="splashscreen" value="splash" />
    <platform name="ios">
        <splash height="1136" src="resources/Default-568h@2x~iphone(640x1136).png" width="640" />
        <splash height="1496" src="resources/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="748" src="resources/Default-Landscape~ipad(1024x748).png" width="1024" />
        <splash height="2008" src="resources/Default-Portrait@2x~ipad(1536x2008).png" width="1536" />
        <splash height="1024" src="resources/Default-Portrait~ipad(768x1024).png" width="768" />
        <splash height="960" src="resources/Default@2x~iphone(640x960).png" width="640" />
        <splash height="480" src="resources/Default~iphone(320x480).png" width="320" />
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <engine name="ios" spec="~4.5.4" />
</widget>
